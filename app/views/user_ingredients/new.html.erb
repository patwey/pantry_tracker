<div class='container'>
  <div class='row'>
    <div class='col s12'>
      <h1>Add To Your Pantry</h1>
    </div>
  </div>

  <div class='row'>
    <div class='col s8'>
      <%= form_for @user_ingredient do |f| %>
        <%= f.label :ingredient_id, 'Name' %>
        <div class='input-field'>
          <%= f.select :ingredient_id, options_from_collection_for_select(@ingredients, :id, :name_with_units) %>
        </div>
        <%= f.label :amount %>
        <%= f.text_field :amount %>
        <%= f.submit 'Add Ingredient', class: 'waves-effect waves-light btn' %>
      <% end %>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col s12'>
      <h1>Log In</h1>
    </div>
  </div>

  <!-- Login Form -->
  <div class='row'>
    <div class='col s8'>
      <%= form_for :session, url: login_path do |f| %>
       <%= f.label :email %>
       <%= f.email_field :email %>
       <br>
       <%= f.label :password %>
       <%= f.password_field :password %>
       <br>
       <%= f.submit 'Login' %>
      <% end %>
    </div>
  </div>
</div>
